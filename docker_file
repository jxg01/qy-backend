# 使用官方Python镜像作为基础镜像
FROM python:3.9-slim

# 设置工作目录
WORKDIR /app

# 安装系统依赖包
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    default-libmysqlclient-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# 复制项目文件到工作目录
COPY . /app/

# 安装Python依赖
RUN pip install --no-cache-dir -r requirements.txt

# 收集静态文件
RUN python manage.py collectstatic --noinput

# 创建日志目录并设置权限
RUN mkdir -p /app/logs/celery && chmod -R 777 /app/logs

# 设置环境变量
ENV PYTHONUNBUFFERED=1

# 暴露端口
EXPOSE 8000

# 启动Django应用（使用gunicorn作为WSGI服务器）
CMD gunicorn qy-backend.wsgi:application --bind 0.0.0.0:8000 --workers 3